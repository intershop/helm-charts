    nodeSelector:
      agentpool: agentpool2
    webadapter:
      podAnnotations:
        # as long as there is no new cache system we need this annotation for icm-web
        "cluster-autoscaler.kubernetes.io/safe-to-evict": "false"
      image:
        repository: "${ICM_WEBSERVER_IMAGE}"
        command: |
